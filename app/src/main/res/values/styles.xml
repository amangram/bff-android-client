<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Toolbar">
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorSecondary</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <style name="StadiumsTitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#24D066</item>
    </style>

    <style name="StadiumsWelcomeTextStyle">
        <item name="android:textSize">24sp</item>

    </style>

    <style name="UserNameTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="UserPhoneTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


</resources>
